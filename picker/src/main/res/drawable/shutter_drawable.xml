<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size

                android:width="50dp"
                android:height="50dp" />
            <solid
                android:color="@android:color/darker_gray"/>
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid
                android:color="@android:color/white"/>
        </shape>
    </item>
</layer-list>